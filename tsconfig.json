{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.*",
    ]
}